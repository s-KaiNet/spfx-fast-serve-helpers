{
  "name": "spfx-fast-serve-helpers",
  "version": "1.12.18",
  "description": "Contains helper classes and functions for spfx-fast-serve tool",
  "main": "lib/index.js",
  "bin": {
    "fast-serve": "lib/serve.js"
  },
  "scripts": {
    "build": "npm run lint && tsc -p .",
    "lint": "eslint -c .eslintrc.json --ext .ts src",
    "prepublishOnly": "rimraf -- lib && npm run build",
    "copy": "cpy **/*.* ../../spfx-fast-serve/samples/advanced/node_modules/spfx-fast-serve-helpers/lib --parents --cwd=lib",
    "dev": "npm run copy && concurrently \"npm run watch:ts\" \"npm run watch:template\"",
    "watch:ts": "tsc -p . --watch",
    "watch:template": "onchange \"lib/**/*.*\" -- npm run copy",
    "pub:beta": "npm publish --tag next"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s-KaiNet/spfx-fast-serve-helpers.git"
  },
  "author": "Sergei Sergeev (https://github.com/s-KaiNet)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/s-KaiNet/spfx-fast-serve-helpers/issues"
  },
  "homepage": "https://github.com/s-KaiNet/spfx-fast-serve-helpers#readme",
  "devDependencies": {
    "@microsoft/sp-build-web": "1.12.1",
    "@types/node": "15.0.2",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "concurrently": "6.1.0",
    "cpy-cli": "3.1.1",
    "eslint": "7.26.0",
    "onchange": "7.1.0",
    "rimraf": "3.0.2",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "@microsoft/loader-load-themed-styles": "1.9.26",
    "@types/copy-webpack-plugin": "6.4.0",
    "@types/loader-utils": "2.0.2",
    "@types/webpack-dev-server": "3.11.4",
    "copy-webpack-plugin": "6.4.0",
    "css-loader": "5.2.4",
    "del": "6.0.0",
    "file-loader": "6.2.0",
    "fork-ts-checker-webpack-plugin": "6.2.4",
    "globby": "11.0.3",
    "loader-utils": "1.4.0",
    "node-fetch": "2.6.1",
    "node-sass": "4.14.1",
    "sass-loader": "9.0.3",
    "spfx-css-modules-typescript-loader": "4.0.1",
    "style-loader": "1.1.3",
    "ts-loader": "8.1.0",
    "webpack": "4.44.2",
    "webpack-cli": "4.6.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.7.3",
    "yargs": "4.6.0"
  }
}
